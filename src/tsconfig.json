{
    "compilerOptions": {
        "declaration": true,
        "module": "es6",
        "noImplicitReturns": true,
        "noEmitOnError": true,
        "preserveConstEnums": false,
        "removeComments": false,
        "sourceMap": true,
        "strict": true,
        "stripInternal": true,
        "target": "es2017"
    },
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
